//-----------------------------------------------------------
// DNS Zones Configuration as master
//-----------------------------------------------------------

zone "foo.com" {
	type master;
	file "master/foo.com.zone";
	allow-query {
		any;
	};
	allow-transfer {
		buddyns-transfer;
	};
};


//-----------------------------------------------------------
// DNS Zones Configuration as slave
//-----------------------------------------------------------

zone "bar.com" {
	type slave;
	file "slave/bar.com.zone";
	masters {
		baz;
	};
	allow-query {
		any;
	};
	notify no;
};

