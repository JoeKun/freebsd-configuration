// /usr/local/etc/namedb/named.conf.local: Local configuration for bind

//-----------------------------------------------------------
// Access-Lists
//-----------------------------------------------------------

// self: local link, localhost
acl myself {
	127.0.0.0/8;
	::1/128;
};

